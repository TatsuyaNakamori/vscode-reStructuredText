{
    "comments": {
        "lineComment": ".."
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["『", "』"],
        ["「", "」"],
        ["【", "】"]
    ],
    "autoClosingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string"]},
        {"open": "`", "close": "`", "notIn": ["string", "comment"]}
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        [":", ":"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"],
        ["*", "*"],
        ["|", "|"],
        ["「", "」"],
        ["『", "』"],
        ["【", "】"]
    ],
    "folding": {
        "offSide": true
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)|([、を『』。]+)"
}
